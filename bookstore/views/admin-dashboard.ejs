                            for(var i=0;i<user.length;i++){ %> 
                        <tr>
                          <td><%= user[i].id %></th>
                          <td><%= user[i].username %></td>
                          <td><%= user[i].email %></td>
                          <td><%= user[i].password %></td>
                          <td><img class="img-fluid rounded-circle"  width="48" height="48"   src="../../uploads/<%= user[i].profile_picture %>"></td>                    
                          <td>
                            <a href="/delete-user/<%= user[i].id %>" class="btn btn-sm btn-danger">Delete</a>
                        
                          </td>
                        </tr>
                       <% } } else{ }  %>
                      </tbody>
                    </table>
              </div>  


  <div class="tab-pane fade" id="v-pills-orders" role="tabpanel" aria-labelledby="v-pills-orders-tab">
